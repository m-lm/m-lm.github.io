---
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();
---

<PageLayout title={post.data.title} description={post.data.description} showBackToTop={true}>
  <Container>
    <div class="animate">
      <BackToPrev href="/blog">
        Back to blog
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {post.data.title}
      </div>
      {post.data.tags && post.data.tags.length > 0 && (
      <div class="animate flex gap-2 flex-wrap mt-2">
        {post.data.tags.map(tag => (
          <a href={`/blog/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="lowercase select-none px-2 py-1 text-xs rounded bg-black/5 dark:bg-white/10 hover:opacity-80 transition-opacity duration-300">
            {tag}
          </a>
        ))}
      </div>
      )}
    </div>
    <article class="animate">
      <Content />
    </article>
  </Container>
</PageLayout>